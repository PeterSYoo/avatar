<!DOCTYPE html>
<html lang="en">
  <head>
  <%- include('./partials/head.ejs')%>
  <link rel="stylesheet" href="./css/air.css">
  </head>
<body>
  <div class="container">
  <%- include('./partials/header.ejs')%>
  <br>
  <div class="row">
    <div class="col-sm-1"><h4>Name</h4></div>
    <div class="col-sm-3"><h4>Image</h4></div>
    <div class="col-sm-2"><h4>Town</h4></div>
    <div class="col-sm-3"><h4>Video</h4></div>
    <div class="col-sm-2"><h4>Quote</h4></div>
  </div><hr>
        <% for (let i = 0; i < allAirNomads.length; i++) {%>
          <div class="row">
            <div class="col-sm-2">
          <h6><%= allAirNomads[i].name %></h6>
            </div>
            <div class="col-sm-2">
            <%= allAirNomads[i].image %>
            </div>
            <div class="col-sm-2">
              <h6><%= allAirNomads[i].town %></h6>
            </div>
            <div class="col-sm-3">
              <%= allAirNomads[i].video %>
            </div>
            <div class="col-sm-2">
              <h7>"<%= allAirNomads[i].quote %>"</h7>
            </div>
            <div class="col-sm-1">
              <div class="row">
              <h6><a href="/airnomads/<%=i; %>/edit">Edit</a></h6>
              </div>
              <div class="row">
              <h6><a href="/airnomads/<%=i; %>?_method=DELETE">Delete</a></h6>
              </div>
            </div>
        </div>
        <hr>
        <% } %>
        <div class="row">
          <div class="col-sm-6">
        <form action="/airnomads/new">
          <input id="new-button" type="submit" value="New" />
        </form>
          </div>
          <div id="back" class="col-sm-6">
        <form action="/">
          <input id="back-button" type="submit" value="Back" />
        </form>
          </div>
        </div>
  <%- include('./partials/footer.ejs')%>
  </div>
</body>
</html>